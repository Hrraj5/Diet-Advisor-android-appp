<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E0E0E0"
    android:fadingEdge="horizontal"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">
            <TextView
                android:id="@+id/tv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" ►DIET PLAN FOR underweight PEOPLE"
                android:layout_marginBottom="15dp"
                android:textAllCaps="true"
                android:fontFamily="serif"
                android:textAppearance="@android:style/TextAppearance.Material.Headline"
                android:textColor="#01579B"
                android:textSize="21sp"
                android:textStyle="bold" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:text=" ►BREAKFAST(9:00 - 10:00)"

        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:textColor="#30336b"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diet1"
        android:textSize="20dp"
        android:textColor="#535c68"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:text=" ►lunch(12:00 - 14:00)"

        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:textColor="#30336b"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diet2"
        android:textSize="20dp"
        android:textColor="#535c68"/>
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:text=" ►Afternoon Tea(16:00 - 18:00)"

        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:textColor="#30336b"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diet3"
        android:textSize="20dp"
        android:textColor="#535c68"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:text=" ►Dinner(19:00 - 21:00)"

        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:textColor="#30336b"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diet4"
        android:textSize="20dp"
        android:textColor="#535c68"/>
        </TableLayout>
    </ScrollView>
</LinearLayout>